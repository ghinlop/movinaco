extend ./layout/layout
block index
    include ./inc/header
    include ./inc/slider
    include ./mixin/widget
    .container-fluid.py-4
        .row
            .col-md-3.order-md-1.order-2
                +listCategory
                +filter_price
                +filter_production
            .col-md-9.order-md-2.order-1
                .row
                    each item in items
                        .col-md-4.mb-2
                            .card.sp_hot
                                .sp_hotimg
                                    a(href="/productinfo.html")
                                        img.card-img-top(src=item.img, alt=item.name)
                                .card-body
                                    h5.card-title=item.name
                                    h3.card-text=item.price                                
                                .card-footer.text-center
                                    .sp_btn
                                        a.sp_btn(href='/productinfo.html') mua ngay
                    .col-md-12.py-3
                        ul.pagination.justify-content-center
                            li.page-item.disabled
                                a.page-link(href='#', tabindex='-1') Previous
                            li.page-item
                                a.page-link(href='#') 1
                            li.page-item
                                a.page-link(href='#') 2
                            li.page-item
                                a.page-link(href='#') 3
                            li.page-item
                                a.page-link(href='#') Next
