mixin show_product(name = 'Sản Phẩm', id = 'product')
    .widget_box
        .widget_header.text-uppercase
            a.widget_title.d-block(
                data-toggle='collapse', 
                href='#list'+id, 
                role='button', 
                aria-expanded='false', 
                aria-controls='list'+id)=name
        .collapse.show(id='list'+id)
            ul.widget_body.nolist
                each val in items
                    li
                        a.px-3
                            .w-100.row(href="/productinfo.html")
                                img.col-sm-3.d-block.px-0.w-100(src=val.img, alt=val.name)
                                h6.col-sm-9.text-info=val.name
                                    span.d-block.text-danger=val.price
