extends ./layout/layout
block index
    include ./inc/header
    include ./mixin/widget
    
    .bg-light.py-3
        .container
            .row
                .col-md-8.order-md-1.order-2
                    .bg-white.px-3
                        each item in items
                            .row.py-3.align-items-center.px-3.border-bottom.border-muted
                                .col-md-1.col-3.px-0
                                    img.d-block.w-100(src=item.img, alt=item.name)
                                .col-md-11.col-9
                                    .row
                                        .col-md-5
                                            .row.align-items-center
                                                a.d-block.col-md-12.col-9(href="/productinfo.html")=item.name
                                                p.mb-0.col-md-12.col-3.d-flex
                                                    a.d-inline.p-1(href="#")
                                                        i.fa.fa-heart-o
                                                    a.d-inline.p-1(href="#")
                                                        i.fa.fa-trash-o
                                        .col-md-3.text-md-left.text-center
                                            big.d-sm-block.d-inline-block.mr-1.text-warning=item.price
                                            small.d-sm-block.d-inline-block.text-muted.mr-sm-0.mr-1
                                                s=item.price
                                            span.d-inline-block.badge.badge-info.px-2.py-1.text-white -100%
                                        .col-md-3.mt-md-0.mt-2
                                            .input-group.mb-0
                                                .input-group-append
                                                    button#totalProduct.input-group-text.bg-info.rounded-0.border-0
                                                        i.fa.fa-minus.text-white
                                                input.text-center.rounded-0.border-0.bg-light.form-control.form-control-sm(type='number', value="1", aria-describedby='totalProduct')
                                                .input-group-append
                                                    button#totalProduct.input-group-text.bg-info.rounded-0.border-0
                                                        i.fa.fa-plus.text-white
                .col-md-4
                    .bg-white
                        +cartstore
